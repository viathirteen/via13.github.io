---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main class="homepage">
      <section class="intro">
        <h1>via.thirteen</h1>
        <p>Visual communication studio shaping identities through bold, experimental design.</p>
      </section>

      <section class="recent-work">
        <h2>recent work</h2>
        <div class="grid">
          <a href="https://www.instagram.com/reel/DHl0-pgBSLJ/?utm_source=ig_web_copy_link&igsh=MzRlODBiNWFlZA==" target="_blank" rel="noopener">
            <img src="/blog-placeholder-1.jpg" alt="via.thirteen reel 1" />
          </a>
          <a href="https://www.instagram.com/reel/DH6IibkPnZo/?utm_source=ig_web_copy_link&igsh=MzRlODBiNWFlZA==" target="_blank" rel="noopener">
            <img src="/blog-placeholder-2.jpg" alt="via.thirteen reel 2" />
          </a>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
